= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  %ol.inputs
    %li
      = f.label :title
      = f.text_field :title
    %li
      = f.label :slug
      = f.text_field :slug
    %li
      = f.label :content
      = f.text_area :content
    %li
      = f.label :author_name, "Author Name"
      = f.text_field :author_name
    %li
      = f.label :tag_names, "Tags"
      %p
        %small Separate tags with commas
      = f.text_field :tag_names
    %li.actions
      = f.submit 'Save'
