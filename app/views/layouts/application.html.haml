!!!5
%html{lang: "en"}
  %head
    %meta{charset: "UTF-8"}
    %title SuperBlog
    %meta{name: "viewport", content: "width=device-width,initial-scale=1.0,shrink-to-fit=no"}
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header#header
      %h1 SuperBlog
      %p.tagline The super, duper blog I write.
      - if current_user
        %p.greeting= "Welcome, #{current_user.name}."
        %p.logout= link_to 'Click here to log out', logout_url

    = yield

    %footer#footer
      %small Site design by me. All rights reserved.
